@model ProjectYu.Models.LoginedUserModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="~/css/Style/Home/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>
    <style>
        .header {
            background-color: white;
        }

        .ui-autocomplete-input {
            height: 26px;
            width: 50%;
        }
    </style>

    @for (var i = 0; i < Model.NewVideosModel.listofVideos.Count; i++)
    {
        if (@Model.NewVideosModel.listofVideos[i].isSelected)
        {
            <title>@Model.NewVideosModel.listofVideos[i].VideoName</title>
        }
    }
        </head>
<body>
    @for (var i = 0; i < @Model.NewVideosModel.listofVideos.Count; i++)
    {
        if (@Model.NewVideosModel.listofVideos[i].isSelected)
        {
            <div align="center" style="border-top-style:groove">
                <div><h2>@Model.NewVideosModel.listofVideos[i].VideoName</h2></div>
                <video controls="controls" style="width:80%;">
                    <source src="~/Content/Videos/@Model.NewVideosModel.listofVideos[i].FileName" type="video/mp4" />
                </video>
                <h3>Created By - Elsy</h3>
                <button id="subscribeButton" value="Subcribe" style="width:100px; height:40px;">Subscribe</button><br />
                <label>Likes - @Model.NewVideosModel.listofVideos[i].LikesCount</label><br />
                <label>Dislikes - @Model.NewVideosModel.listofVideos[i].DislikesCount</label><br />
                <textarea>Insert Comments here</textarea>
            </div>
        }

    }


</body>
    </html>
