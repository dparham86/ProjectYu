@model List<ProjectYu.Models.NewVideosModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Video Search</title>
</head>
<body>
    <div align="center">
        <h1 align="center">Searched Video(s)</h1>
        <table>

            @{
                int i = 0;

                @foreach (var video in Model)
                {
                    int cellBreaker = Model.Count;

                    if (i % 4 == 0)
                    {

                        @:<tr>
                        }

                        <td>
                            <video width="300" height="300" controls="controls" autoplay="autoplay">
                                <source src='' type="video/mp4">

                                Your browser does not support the video tag.
                            </video>
                        </td>
                        <td>
                            <a href=""></a>
                        </td>

                        if ((i % cellBreaker) == (cellBreaker - 1))
                        {
                        @:</tr>
                    }
                    i++;
                }

            }
        </table>
    </div>
</body>
</html>
