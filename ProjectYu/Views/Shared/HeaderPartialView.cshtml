@model ProjectYu.Models.LoginedUserModel
@{
    Layout = null;
}



@if (@Model.loggedIn == false)
{
    <table style="width:100%">
        <tr>
            <td align="left">
                <h3>Project Yu</h3>
            </td>
            <td align="center">              
                <input type="text" placeholder="Search.." name="search" id="autosearch" style="overflow-y:auto;"><button type="submit"><i class="fa fa-search"></i></button>
            </td>
            <td align="right">
                <input id="loginButton" type="button" value="Sign In" />
            </td>
        </tr>
    </table>
    @using (Html.BeginForm("Login", "Login"))
    {
        <div class="container">
            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header" style="padding:35px 50px;">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4><span class=""></span> Project Yu Login</h4>
                        </div>
                        <div class="modal-body" style="padding:40px 50px;">
                            <form role="form">
                                <div class="form-group">
                                    <label for="usrname"><span class="glyphicon glyphicon-user"></span> Username</label>
                                    @Html.TextBoxFor(x => x.UserModel.UserName)
                                </div>
                                <div class="form-group">
                                    <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Password</label>
                                    @Html.PasswordFor(x => x.UserModel.PassWord)

                                </div>
                                <div class="checkbox">
                                    <label><input type="checkbox" value="" checked>Remember me</label>
                                </div>
                                <button type="submit" class="btn-block" value="Login"><span class="glyphicon glyphicon-off"></span> Login</button>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                            <p>Not a member? <a href="#">Sign Up</a></p>
                            <p>Forgot <a href="#">Password?</a></p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
}
else
{
    <table style="width:90%">
        <tr>
            <td align="left">
                <h3>Project Yu</h3>
            </td>
            <td align="center">
                <input type="text" placeholder="Search.." name="search"><button type="submit"><i class="fa fa-search"></i></button>
            </td>
            <td align="right">
                @Model.UserModel.UserName
                <ul style="list-style-type:none">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">My Channel</a></li>


                    <li>
                        <a asp-area="" asp-controller="Favorites" asp-action="Index">FavoritesList</a>
                    </li>


                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index">Watch Later List</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index">Settings</a>
                    </li>

                    <li><a asp-area="" asp-controller="Home" asp-action="Index">My Account</a></li>
                    <li><a asp-area="" asp-controller="VideoUpload" asp-action="Index">Add Video</a></li>
                </ul>
            </td>





    </table>


}